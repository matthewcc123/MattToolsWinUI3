<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Views.PdfOrganizerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pdfeditor="using:Models.PdfEditor"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:viewmodels="using:ViewModels"
    Background="{ThemeResource DefaultPageBackgroundColor}"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:PdfEditorViewModel />
    </Page.DataContext>

    <Grid x:ConnectionId='2' x:Name="MainView" RowSpacing="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Padding="24,24,24,0"
            VerticalAlignment="Center">
            <TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="PDF Organizer" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Margin="24,12,0,0"
                    VerticalAlignment="Top"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <StackPanel x:ConnectionId='17'
                            x:Name="MainBoardControl"
                            Margin="14"
                            Spacing="14">

                            <Button x:ConnectionId='19'
                                x:Name="SelectButton"
                                Padding="12,8,12,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                                          >
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Viewbox Height="16">
                                        <FontIcon Margin="0,0,5,0" Glyph="&#xe838;" />
                                    </Viewbox>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="Select PDF" />
                                </StackPanel>
                            </Button>

                            <Button x:ConnectionId='20'
                                x:Name="OrganizeButton"
                                Padding="12,8,12,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                                            
                                IsEnabled="False"
                                Style="{ThemeResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Viewbox Height="16">
                                        <SymbolIcon Margin="0,0,5,0" Symbol="Play" />
                                    </Viewbox>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="Organize PDF" />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        <ProgressBar x:ConnectionId='18' x:Name="MainProgressBar" Visibility="Collapsed" />
                    </StackPanel>

                </Border>

                <Border x:ConnectionId='11'
                    x:Name="SelectedFilesListContainer"
                    Grid.Row="1"
                    Margin="24,12,0,24"
                    VerticalAlignment="Top"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="Collapsed">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Padding="12"
                            Orientation="Vertical"
                            Spacing="4">
                            <Button x:ConnectionId='16'
                                x:Name="ResetButton"
                                Padding="12,8,12,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                                         >
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Viewbox Height="16">
                                        <SymbolIcon Margin="0,0,5,0" Symbol="Refresh" />
                                    </Viewbox>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="Reset All" />
                                </StackPanel>
                            </Button>

                            <controls:LineBorder />
                        </StackPanel>

                        <ScrollView Grid.Row="1" Margin="0,0,0,12">
                            <ListView x:ConnectionId='12'
                                x:Name="SelectedFileListView"
                                Padding="12,0,12,0"
                                AllowDrop="True"
                                CanDragItems="True"
                                CanReorderItems="True"
                                                                              
                                IsItemClickEnabled="True"
                                ItemsSource="{Binding Documents}"
                                SelectionMode="None">

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Margin" Value="0,0,0,4" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate                            >
                                        <Grid>
                                            <Border
                                                Background="{Binding ColorBrush}"
                                                CornerRadius="4"
                                                Opacity=".5" />
                                            <Border
                                                BorderBrush="{Binding ColorBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4" />
                                            <Grid Padding="4">
                                                <TextBlock
                                                    Width="120"
                                                    Padding="8"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{Binding FileName}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap" />
                                                <Button x:ConnectionId='15'
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Stretch"
                                                                                >
                                                    <Viewbox Width="12">
                                                        <SymbolIcon Symbol="Delete" />
                                                    </Viewbox>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollView>

                    </Grid>

                </Border>
            </Grid>


            <Grid x:ConnectionId='3'
                Grid.Column="1"
                Padding="24,12,24,24"
                AllowDrop="True"
                                                 
                                                 
                                       >

                <Border
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4" />

                <GridView x:ConnectionId='4'
                    x:Name="PdfGridView"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    AllowDrop="True"
                    CanDragItems="True"
                    CanReorderItems="True"
                    IsHitTestVisible="True"
                    IsItemClickEnabled="False"
                    ItemsSource="{Binding Pages}"
                    Visibility="Collapsed">

                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="12,12,0,12" />
                            <Setter Property="CornerRadius" Value="4" />
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemTemplate>

                        <DataTemplate                             >

                            <StackPanel
                                Padding="8,12,8,8"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{Binding ColorBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Orientation="Vertical"
                                Spacing="8">
                                <Image
                                    Width="144"
                                    Height="160"
                                    HorizontalAlignment="Center"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Source="{Binding ThumbnailImage}" />
                                <Grid Height="32" ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button x:ConnectionId='9'
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                                                >
                                        <Viewbox Width="16">
                                            <SymbolIcon Symbol="Delete" />
                                        </Viewbox>
                                    </Button>
                                    <Grid Grid.Column="1">
                                        <Border
                                            Background="{Binding ColorBrush}"
                                            CornerRadius="4"
                                            Opacity=".5" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding PageNumber}" />
                                    </Grid>

                                    <Button x:ConnectionId='10'
                                        Grid.Column="2"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                                                
                                        Tag="{Binding PdfSharpPage}">
                                        <Viewbox Width="16">
                                            <SymbolIcon Symbol="Rotate" />
                                        </Viewbox>
                                    </Button>
                                </Grid>

                            </StackPanel>

                        </DataTemplate>

                    </GridView.ItemTemplate>
                </GridView>

                <StackPanel x:ConnectionId='5'
                    x:Name="EmptyMessage"
                    Padding="24,0,24,128"
                    VerticalAlignment="Center"
                    Spacing="12"
                    Visibility="Visible">
                    <Viewbox Width="40" HorizontalAlignment="Center">
                        <SymbolIcon Symbol="Page2" />
                    </Viewbox>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="32"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Text="Select PDF File" />
                    <TextBlock
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                        Text="Sort, add and delete PDF pages. Drag and drop the page thumbnails and sort them in our PDF organizer."
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>

                <Grid x:ConnectionId='6'
                    x:Name="DropMessage"
                    VerticalAlignment="Stretch"
                    Background="#B9000000"
                    Visibility="Collapsed">
                    <StackPanel
                        Padding="24,0,24,128"
                        VerticalAlignment="Center"
                        Spacing="12">
                        <Viewbox Width="40" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Upload" />
                        </Viewbox>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Style="{StaticResource TitleLargeTextBlockStyle}"
                            Text="Drop your PDF here!" />

                    </StackPanel>
                </Grid>

            </Grid>

        </Grid>

    </Grid>

</Page>

