<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Themes">

    <SolidColorBrush x:Key="DefaultPageBackgroundColor" Color="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" />
    <SolidColorBrush x:Key="AlertRedBackgroundColor" Color="#F4E1DF" />
    <SolidColorBrush x:Key="AlertGreenBackgroundColor" Color="#DDEFDD" />
    <SolidColorBrush x:Key="AlertBlueBackgroundColor" Color="#DAE9F4" />
    <SolidColorBrush x:Key="AlertYellowBackgroundColor" Color="#F3F4DA" />
    <SolidColorBrush
        x:Key="AlertRedBorderColor"
        Opacity="40"
        Color="#C42B1C" />
    <SolidColorBrush
        x:Key="AlertGreenBorderColor"
        Opacity="40"
        Color="#0F7B0F" />
    <SolidColorBrush
        x:Key="AlertBlueBorderColor"
        Opacity="40"
        Color="#0078d4" />
    <SolidColorBrush
        x:Key="AlertYellowBorderColor"
        Opacity="40"
        Color="#D4CB00" />

    <SolidColorBrush x:Key="RedButtonBackground" Color="#CE3223" />
    <SolidColorBrush x:Key="RedButtonBackgroundPointedOver" Color="#dc2f1e" />
    <SolidColorBrush x:Key="RedButtonBackgroundPressed" Color="#DC4031" />
    <SolidColorBrush x:Key="RedButtonForeground" Color="#fefefe" />
    <SolidColorBrush x:Key="RedButtonForegroundPressed" Color="#ECB3AD" />


</ResourceDictionary>

