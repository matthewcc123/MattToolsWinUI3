<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Themes">

    <SolidColorBrush x:Key="DefaultPageBackgroundColor" Color="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" />
    <SolidColorBrush x:Key="AlertRedBackgroundColor" Color="#4f322f" />
    <SolidColorBrush x:Key="AlertGreenBackgroundColor" Color="#2d412d" />
    <SolidColorBrush x:Key="AlertBlueBackgroundColor" Color="#274258" />
    <SolidColorBrush x:Key="AlertYellowBackgroundColor" Color="#515827" />
    <SolidColorBrush
        x:Key="AlertRedBorderColor"
        Opacity="40"
        Color="#C42B1C" />
    <SolidColorBrush
        x:Key="AlertGreenBorderColor"
        Opacity="40"
        Color="#0F7B0F" />
    <SolidColorBrush
        x:Key="AlertBlueBorderColor"
        Opacity="40"
        Color="#0078d4" />
    <SolidColorBrush
        x:Key="AlertYellowBorderColor"
        Opacity="40"
        Color="#D4CB00" />

    <SolidColorBrush x:Key="RedButtonBackground" Color="#ea3321" />
    <SolidColorBrush x:Key="RedButtonBackgroundPointedOver" Color="#b62719" />
    <SolidColorBrush x:Key="RedButtonBackgroundPressed" Color="#D44638" />
    <SolidColorBrush x:Key="RedButtonForeground" Color="#000000" />
    <SolidColorBrush x:Key="RedButtonForegroundPressed" Color="#1E0603" />


</ResourceDictionary>
